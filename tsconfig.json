{
  "version": false,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "assets/**/*.ts",
    "assets/custom-typings.d.ts",
    "typings/index.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "compiler": "ntypescript",
    "resolveGlobs": true,
    "forkChecker": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "assets/custom-typings.d.ts",
    "assets/polyfills.ts",
    "assets/src/app/app.component.ts",
    "assets/src/boot.ts",
    "assets/vendor.ts",
    "typings/index.d.ts"
  ]
}
